<% template admin_login() %>
<form action="<% login_url | raw %>" method="post">
	<center>
		<div style="padding:50px; font-size:200%;">
			<table style="text-align:left" >
				<tr>
					<td><% gt 'Username:' %></td>
					<td><input type="text" name="username" /></td>
				</tr>
				<tr>
					<td><% gt 'Password:' %></td>
					<td><input type="password" name="password" /></td>
				</tr>
				<tr>
					<td><input type="submit" value="<% gt 'Login' %>" /></td>
					<td>&nbsp;</td>
				</tr>
			</table>
		</div>
	</center>
</form>
<% end %>
