        <h2>Unpublished Posts</h2>
        <% call get_post %>
        <% if next_post %>
	        <ul>
        	<% repeat %>
			<li><a href="<% edit_url %>"><% post_title %></a></li>
		<% call get_post %>
		<% until not next_post %>
		</ul>
	<% else %>
		<p>No unpublished posts</p>
	<% end%>
</div>
<div id="news">
<h2>Latest Comments</h2>
        <% call get_comment %>
        <% if next_comment %>
	        <ul>
        	<% repeat %>
			<li><a href="<% post_permlink %>"><% username %></a></li>
		<% call get_comment %>
		<% until not next_comment %>
		</ul>
	<% else %>
		<p>No comments</p>
	<% end%>
