<% namespace admin_view %>
<% class admin_editcomment uses data::admin_comments extends admin_base %>
<% template master_content() %>
<script type="text/javascript">
<!--
	/*  Form validation and simple-antispam */
	function testform()
	{
		var form=document.getElementById('inp');
		if(form.content.value.length == 0)
		{
			alert('Content is mandatory!');
			return false;
		}
		else {
			return true;
		}
	}
-->
</script>
<div id="form">
<h2><% gt "Edit Comment No." %><% id %></h2>
<form id="inp" action="<% edit_comment_url | raw %>" method="post" onsubmit="return testform();">
        <dl>
        <dt><% gt "Author:" %></dt>
        <dd><input type="text" name="author" size="40" value="<% author %>" /></dd>
        <dt><% gt "E-Mail:" %></dt>
        <dd><input type="text" name="email" size="40" value="<% email %>" /></dd>
        <dt><% gt "Url:" %></dt>
        <dd><input type="text" name="url" size="80" value="<% url %>" /></dd>
        <dt><% gt "Content:" %></dt>
        <dd>
                <fieldset><div> <!-- IE Textarea ugly hack -->
                        <textarea name="content" cols="80" rows="10"><% content %></textarea>
                </div></fieldset>
        </dd>
        <dd>
                <input type="submit" name="save" value="<% gt "Save" %>" />
                <input type="submit" name="delete" value="<% gt "Delete" %>" onclick="return confirm('<% gt "Are you shure?" %>');" />
        </dd>
        </dl>
</form>
</div>
<% end template %>
<% end class %>
<% end namespace %>
