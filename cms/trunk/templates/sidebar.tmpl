<% template sidebar() %>
<% if def top_page_title %>
	<h2><% top_page_title %></h2>
<% end %>
<% top_page_content  | ext latex | ext markdown2html %>
<% foreach page in pages %>
	<h2><% gt 'Pages' %></h2>
	<ul>
		<% item %>
		<li><a href="<% page.link %>"><% page.title %></a></li>
		<% end %> 
	</ul>
<% end %>

<% foreach cat in link_cats %>
	<% item %>
	<h2><% cat.title %></h2>
	<% foreach link in cat.links %>
		<ul>
		<% item %>
			<li>
				<a href="<% link.href %>"><% link.title %> </a>
				<% if def link.description %> &mdash; <% link.description %><% end %>
			</li>
		<% end %>
		</ul>
	<% empty %>
		<p><% gt 'No links' %></p>
	<% end %>
	<% end %>
<% end %>

<div id="copyright">
<% if def copyright_string %>
	<% copyright_string | ext markdown2html %>
<% else %>
	<% gt 'Â© All Rights Reserved' %>
<% end %>
</div>
<% end %>
