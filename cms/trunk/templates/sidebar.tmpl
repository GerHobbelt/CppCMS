<% namespace vary %>
<% class sidebar uses data::sidebar %>
<% template render() %>
<% foreach page in pages %>
	<h2><% gt "Pages" %></h2>
	<ul>
		<% item %>
		<li><a href="<% page.link %>"><% page.title %></a></li>
		<% end %> 
	</ul>
<% end %>

<% foreach cat in cats %>
<h2><% gt "Categories" %></h2>
	<ul>
	<% item %>
		<li><a href="<% cat.link %>"><% cat.name %></a></li>
	<%end%>
	</ul>
<% end %>

<% foreach cat in link_cats %>
	<% item %>
	<h2><% cat.title %></h2>
	<% foreach link in cat.links %>
		<ul>
		<% item %>
			<li>
				<a href="<% link.href %>"><% link.title %> </a>
				<% if not empty link.description %> &mdash; <% link.description %><% end %>
			</li>
		<% end %>
		</ul>
	<% empty %>
		<p><% gt "No links" %></p>
	<% end %>
	<% end %>
<% end %>

<div id="copyright">
<% if not empty copyright_string %>
	<% copyright_string | ext markdown2html %>
<% else %>
	<% gt "Â© All Rights Reserved" %>
<% end %>
</div>
<% end template %>
<% end class %>
<% end namespace %>
