        <h2>Unpublished Posts</h2>
        <% foreach post in posts %>
	        <ul>
        	<% item %>
			<li><a href="<% post.edit_url | raw %>"><% post.title %></a></li>
		<% end %>
		</ul>
	<% empty %>
		<p>No unpublished posts</p>
	<% end%>
</div>
<div id="news">
<h2>Latest Comments</h2>
        <% foreach comment in comments %>
	        <ul>
        	<% item %>
			<li><a href="<% comment.post_permlink | raw %>"><% comment.username %></a>, 
			    <a href="<% comment.edit_url | raw %>">edit</a></li>
		<% end %>
		</ul>
	<% empty %>
		<p>No comments</p>
	<% end%>
