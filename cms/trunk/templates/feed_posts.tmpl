<% template feed_posts() %><?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
<channel>
	<title><% blog_name %></title>
	<link>http://<% host | raw %><% base_url | raw %></link>
	<description><% blog_description %></description>
	<atom:link 
		href="http://<% host | raw %><% rss_posts | raw %>" 
		rel="self" type="application/rss+xml" />
	<% foreach post in posts %>
		<% item %>
		<item>
			<title><% post.title %></title>
			<link>http://<% host | raw %><% post.permlink | raw %></link>
			<guid>http://<% host | raw %><% post.permlink | raw %></guid>
			<description>
			<% post.abstract | ext latex | ext markdown2html | escape %>
			&lt;p&gt;
			&lt;a href="<% post.permlink | raw %>"&gt;<% gt 'more...' %>&lt;/a&gt;
			&lt;/p&gt;
			</description>
		</item>
		<% end %>
	<% end %>
</channel>
</rss>
<% end %>
