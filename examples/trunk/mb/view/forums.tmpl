<% namespace vary %>
<% class forums uses data::forums  extends master %>
<% template body() %>
	<% foreach topic in topics %>
		<ul>
		<% item %>
		<li><a href="<% topic.url %>"><% topic.title %></a></li>
		<% end %>
		</ul>
	<% empty %>
		<h2><% gt "No Topics" %></h2>
	<% end %>
	<form action="" method="post" >
	<% form as_p form %>
	</form>
	<% if not empty next_page %>
	<p><a href="<% next_page %>"><% gt "Next Page" %></a></p>
	<% end %>
<% end template %>
<% end class %>
<% end namespace %>
