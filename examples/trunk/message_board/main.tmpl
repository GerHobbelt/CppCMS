<% template main() %>
<h1>Wellcome To Super Simple Message Board</h1>
   <% foreach topic in topics %>
      <ul>
      <% item %>
         <li><a href="<% topic.url %>"><% topic.title %></a></li>
      <% end %>
      </ul>
   <% empty %>
      <h2>The message board is empty</h2>
   <% end %>
   <% if def more_url %>
     <p><a href="<% more_url %>">more...</a></p>
   <% end %>
   <h2>Open New Topic</h2>
   <p>
   <form action="<% submit_url %>" method="post" >
   Title: <input type="text" name="title" size=40 /><br />
   <input type="submit" name="submit" value="Submit" />
   </form>
   </p>
<% end %>
